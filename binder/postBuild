#!/bin/bash

# Install Mantid.
wget -O - http://apt.isis.rl.ac.uk/2E10C193726B7213.asc | sudo apt-key add -
sudo apt-add-repository "deb [arch=amd64] http://apt.isis.rl.ac.uk $(lsb_release -c | cut -f 2) main"
sudo apt-add-repository ppa:mantid/mantid

# Install manually with pip until conda-forge package is ready.
git clone --single-branch --branch v0.1.0a61 https://github.com/bluesky/tiled.git /tmp/tiled
pip install '/tmp/tiled[complete]'
